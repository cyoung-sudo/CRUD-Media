<%= render 'shared/errors', obj: @comment %>

<div class="d-flex justify-content-center align-items-center min-vh-100">
  <div class="container form">
    <div class="row">
      <div class="col-12">
        <div class="header shadow-lg"><h2 class="text-center">Create comment</h2>
          <div class="sections shadow-lg">
            <%= form_for(@comment, url: comments_path(:post_id => params[:post_id])) do |f| %>
              <div class="form-group">
                <%= f.label :content %>
                <%= f.text_area :content, class: "form-control", rows: 10 %>
              </div>
              <%= f.submit class: "btn btn-custom" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>