<h1>Profile</h1>
<p>Email: <%= @user.email %></p>
<p>Name: <%= @user.first_name %> <%= @user.last_name %></p>
<p>Followers: <%= @user.followers.count %></p>
<% if current_user.followings.include?(@user) %>
  <%= link_to "Unfollow", unfollow_user_path(@user), method: :post %>
<% else %>
  <%= link_to "Follow", follow_user_path(@user), method: :post %>
<% end %>

<h2>Posts</h2>
<ul>
  <hr>
  <% @posts.each do |post| %>
    <li><strong><%= post.title %></strong></li>
    <li><%= post.description %></li>
    <li><%= post.user.email %></li>
    <%= link_to "View", post_path(post) %>
    <% if current_user == @user %>
      <%= link_to "Edit", edit_post_path(post) %>
      <%= link_to 'Delete', post_path(post), method: :delete, data: {confirm: "Are you sure you want to delete this post?"} %>
    <% end %>
    <hr>
  <% end %>
</ul>
