<div class="container">
  <div class="row">
    <div class="col-md-4 col-12">
      <div class="header shadow-lg"><h2 class="text-center"><%= @user.full_name %></h2>
        <%= image_tag @user.avatar.url(:medium), class: "img-fluid img-thumbnail" %>
        <p>Email: <%= @user.email %></p>
        <p>Followers: <%= @user.followers.count %></p>
        <% if current_user != @user %>
          <% if current_user.followings.include?(@user) %>
            <%= link_to "Unfollow", unfollow_user_path(@user), method: :post %>
          <% else %>
            <%= link_to "Follow", follow_user_path(@user), method: :post %>
          <% end %>
        <% end %>
      </div>
    </div>
    <div class="col-md-8 col-12">
      <div class="header shadow-lg"><h2 class="text-center"><%= @user.first_name %>'s Posts</h2>
        <%= render 'posts/list', obj: @posts %>
      </div>
    </div>
  </div>
</div>
