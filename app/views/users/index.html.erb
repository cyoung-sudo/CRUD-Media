<div class="container">
  <div class="row">
    <div class="col-md-8 col-12">
      <div class="header shadow-lg"><h1 class="text-center">Users</h1>
        <% @users.each do |user| %>
          <div class="posts shadow-lg">
            <div class="row post-header">
              <div class="col-xs-4">
                <%= link_to image_tag(user.avatar.url(:thumb), class: "img-fluid img-thumbnail"), user_path(user) %>
              </div>
              <div class="col-xs-4 post-info">
                <div><strong><%= link_to user.full_name, user_path(user) %></strong></div>
                <div>Joined <%= time_ago_in_words(user.created_at) %> ago</div>
                <div><%= user.followers.count %> followers</div>
                <% if user_signed_in? %>
                  <% if current_user != user %>
                    <% if current_user.followings.include?(user) %>
                      <%= link_to '<i class="fa fa-user-times"></i> Unfollow'.html_safe, unfollow_user_path(user), method: :post %>
                    <% else %>
                      <%= link_to '<i class="fa fa-user-plus"></i> Follow'.html_safe, follow_user_path(user), method: :post %>
                    <% end %>
                  <% end %>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
    <div class="col-md-4 col-12">
      <div class="header shadow-lg"><h2 class="text-center">Most Followed</h2>
        <div class="posts shadow-lg">
          <div class="row post-header">
            <div class="col-xs-4">
              <%= link_to image_tag(@most_followed.avatar.url(:thumb), class: "img-fluid img-thumbnail"), user_path(@most_followed) %>
            </div>
            <div class="col-xs-4 post-info">
              <div><strong><%= link_to @most_followed.full_name, user_path(@most_followed) %></strong></div>
              <div>Joined <%= time_ago_in_words(@most_followed.created_at) %> ago</div>
              <div><%= @most_followed.followers.count %> followers</div>
              <% if user_signed_in? %>
                <% if current_user != @most_followed %>
                  <% if current_user.followings.include?(@most_followed) %>
                    <%= link_to '<i class="fa fa-user-times"></i> Unfollow'.html_safe, unfollow_user_path(@most_followed), method: :post %>
                  <% else %>
                    <%= link_to '<i class="fa fa-user-plus"></i> Follow'.html_safe, follow_user_path(@most_followed), method: :post %>
                  <% end %>
                <% end %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>