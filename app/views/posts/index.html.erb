<div class="container">
  <div class="row">
    <div class="col-md-8 col-12">
      <div class="header shadow-lg"><h2 class="text-center">Posts</h2>
        <%= render 'posts/list', obj: @posts %>
      </div>
    </div>
    <div class="col-md-4 col-12">
      <div class="header shadow-lg"><h2 class="text-center">Most Liked</h2>
        <div class="posts shadow-lg">
          <div class="row post-header">
            <div class="col-xs-4">
              <%= link_to image_tag(@most_liked.user.avatar.url(:thumb), class: "img-fluid img-thumbnail"), user_path(@most_liked.user) %>
            </div>
            <div class="col-xs-4 post-info">
              <strong><%= link_to @most_liked.title, post_path(@most_liked) %></strong>
              <p><%= time_ago_in_words(@most_liked.created_at) %> ago * <i class="fa fa-globe"></i></p>
            </div>
          </div>
          <div class="post-body"><%= @most_liked.description %></div>
          <div class="post-author">Created by: <%= link_to @most_liked.user.full_name, user_path(@most_liked.user) %></div>
          <div class="post-author"><%= @most_liked.likes.count %> likes</div>
          <% if user_signed_in? %>
            <span class="post-actions">
              <% if current_user.liked.include?(@most_liked) %>
                <%= link_to '<i class="fa fa-thumbs-down"></i> Unlike'.html_safe, unlike_post_path(@most_liked), method: :post %>
              <% else %>
                <%= link_to '<i class="fa fa-thumbs-up"></i> Like'.html_safe, like_post_path(@most_liked), method: :post %>
              <% end %>
            </span>
            <span><%= link_to '<i class="fa fa-comment"></i> Comment'.html_safe, new_comment_path(:post_id => @most_liked) %></span>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>